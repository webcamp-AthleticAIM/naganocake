<!--新規登録-->
  <div class='container'>
    <h3>配送登録/一覧</h3>
      <%= form_with model: @address, local:true do |f| %>
      <%= f.label '郵便番号(ハイフンなし)' %>
      <%= f.text_field :postal_code %><br>
      <%= f.label '住所' %>
      <%= f.text_field :address %><br>
      <%= f.label '宛名' %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>
      <% end %>


<!--配送先一覧-->
    <table class="table table-bordered">
      <theade class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </theade>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-success btn-sm' %>
            <%= link_to '削除する', address_path(address), method: :delete, 'data-confirm' => '本当に消しますか？', class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
