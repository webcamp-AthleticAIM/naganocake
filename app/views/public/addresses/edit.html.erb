  <div class='container'>
    <h3>配送先編集</h3>
    <div class="row ml-5">
      <%= form_with model: @address, local:true do |f| %>
        <div class="col mb-2">
          <%= f.label '郵便番号(ハイフンなし)' %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="col mb-2">
          <%= f.label '住所'  %>
          <%= f.text_field :address %>
        </div>
        <div class="col mb-2">
          <%= f.label '宛名'%>
          <%= f.text_field :name %>
          <%= f.submit '変更内容を保存', class: 'btn btn-sm btn-success ml-5' %>
        </div>


      <% end %>
    </div>
  </div>
