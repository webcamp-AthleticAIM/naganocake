<div class="container">
  <h2>新規会員登録</h2>
  <div class="row">

    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label '名前' %>
        (姓) <%= f.text_field :last_name, placeholder: "令和" %>
        (名) <%= f.text_field :first_name, placeholder: "道子" %>
      </div>

      <div class="field">
        <%= f.label 'フリガナ' %>
        (姓) <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
        (名) <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
      </div>

      <div class="field">
        <%= f.label 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %>
      </div>

      <div class="field">
        <%= f.label '郵便番号（ハイフンなし）' %>
        <%= f.text_field :postal_code, placeholder: "0000000" %>
      </div>

      <div class="field">
        <%= f.label '住所' %>
        <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0' %>
      </div>

      <div class="field">
        <%= f.label '電話番号（ハイフンなし）' %>
        <%= f.text_field :telephone_number, placeholder: '0000000000' %>
      </div>

      <div class="field">
        <%= f.label 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label 'パスワード（確認用）' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <h2>既に登録済みの方</h2>
  <div class="row">
    <%= render "public/shared/links" %>
  </div>
</div>
