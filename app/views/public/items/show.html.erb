<div class="container mt-5">
  <div class="row mx-5">
    <div class="col-md-3">
      <%= render 'public/items/genres', genres: @genres %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="d-flex">
        <div class="image">
          <%= attachment_image_tag @item, :image, size: "300x200" %>
        </div>
        <div class="discription ml-3">
          <div class="h3"><%= @item.name %></div>
          <div class><%= @item.introduction %></div>
          <div class="mt-5">
            <span>¥<%= @item.add_tax_price %></strong></span>
            <span>(税込)</span>
          </div>
        </div>
      </div>
      <div class="form-group float-right mt-3">
        <%= form_with model: @cart_item, url: cart_items_path, method: :post,local: true do |f| %>
          <%= f.hidden_field :item_id,value: @item.id %>
          <%= f.select :item_amount, *[1..100] %>
          <%= f.submit "カートに入れる",class:"btn btn-success btn-sm ml-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
