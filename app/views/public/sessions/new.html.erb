<div class='container'>
  <h3><mark>ログイン</mark></h3>

  <p class='ml-4'><mark>会員の方はこちらからログイン</mark></p>
  <div class='row justify-content-center'>
    <%= form_with model: @customer, url: customer_session_path, id: 'new_customer', class: 'new_customer' do |f| %>
    <div class="col">
      <%= f.label 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>

    <div class="col">
      <%= f.label 'パスワード' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="action text-center mt-4">
      <%= f.submit "ログイン", class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
  <p class='mt-3 ml-4'><mark>会員登録がお済みでない方</mark></p>
    <%= render "public/shared/links" %>
</div>
