<div class="container">
  <div class="d-flex row ml-auto mt-5">
    <div class="mr-auto bg-light text-secondary"><h2>ショッピングカート</h2></div>
    <%= link_to "カートを空にする",cart_items_destroy_all_path,class:"btn btn-danger",method: :delete %>
  </div>

  <table class="table mt-5 ">
    <thead>
      <tr>
        <th style="width: 40%">商品名</th>
        <th style="width: 15%">単価(税込)</th>
        <th style="width: 15%">数量</th>
        <th style="width: 20%">小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item|%>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, size: "100x100" %>
            <%= cart_item.item.name %>
            </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
            <%= form_with model: cart_item,url: cart_item_path(cart_item),method: :patch do |f| %>
              <%= f.hidden_field :item_id %>
              <%= f.select :item_amount, *[1..100] %>
              <%= f.submit "変更",class:"btn btn-success" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除",cart_item_path(cart_item),method: :delete,class: "btn btn-danger" %></td>
        </tr>
        <% @total_price += cart_item.subtotal %>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex row ml-auto mt-5">
    <div class="mr-auto ">
      <%= link_to "買い物を続ける",items_path,class:"btn btn-primary" %>
    </div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>合計金額</th>
            <th><%= @total_price %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <div class="text-center mt-3">
    <div class="btn btn-success">情報入力に進む</div>
  </div>

</div>

