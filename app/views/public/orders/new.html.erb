<div class="container">
  <h2>注文情報入力</h2>

  <div class="row">
    <%= form_with(model: order, local: true, url: { action: :confirm }) do |f| %>
      <div class="category">
        <h5>支払い方法</h5>
          <%= f.radio_button :payment, Order.payments.key(0) %>
          <%= f.label :payment, Order.payments_i18n[:credit_card] %></br>

          <%= f.radio_button :payment, Order.payments.key(1) %>
          <%= f.label :payment, Order.payments_i18n[:transfer] %>
      </div>
      <div class="category">
        <h5>お届け先</h5>
    　　<div>
          <%= f.radio_button :address, @current_addresses %>
          <%= f.label :address, "ご自身の住所", value: @current_addresses  %></br>

          〒 <%= @customer.postal_code %> <%= @customer.address %></br>
          <%= @customer.last_name %> <%= @customer.first_name %>
        </div>
        <div class="category">
          <%= f.radio_button :address, :address_id  %>
          <%= f.label :address, "登録済住所から選択", value: :address_id  %></br>
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
        </div>
        <div class="category">
          <%= f.radio_button :address, @order %>
          <%= f.label :address, "新しいお届け先", value: @order %></br>
          <div>
            <%= form_with model: @order, local: true do |f| %>
              <div>
                <%= f.label '郵便番号（ハイフンなし）' %>
                <%= f.text_field :postal_code, placeholder: "0000000" %>
              </div>
              <div>
                <%= f.label '住所' %>
                <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町１−１" %>
              </div>
              <div>
                <%= f.label '宛名' %>
                <%= f.text_field :name, placeholder: "令和道子" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
　　　<div>
　　　  <p> "確認画面へ進む" </p>
　　　</div>
    <% end %>
  </div>
</div>



