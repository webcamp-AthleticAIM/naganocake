<div class="container">
  <h2>注文情報入力</h2>

  <div class="row">
    <div class="col-md-10 offset-md-2">
    <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>

      <h5>支払い方法</h5>
        <div>
          <%= f.radio_button :payment, Order.payments.key(0) %>
          <%= f.label :payment, Order.payments_i18n[:credit_card] %></br>

          <%= f.radio_button :payment, Order.payments.key(1) %>
          <%= f.label :payment, Order.payments_i18n[:transfer] %>
        </div>

      <h5>お届け先</h5>
        <div>
          <%= f.radio_button :order_addresses, 0 %>
          <%= f.label :order_addresses_0, "ご自身の住所" %></br>

          〒 <%= current_customer.postal_code %> <%= current_customer.address %></br>
            <%= current_customer.last_name %> <%= current_customer.first_name %>
        </div>

        <div>
          <%= f.radio_button :order_addresses, 1 %>
          <%= f.label :order_addresses_1, "登録済住所から選択" %></br>
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display), size: 50 %>
        </div>
        <div>
          <%= f.radio_button :order_addresses, 2 %>
          <%= f.label :order_addresses_2, "新しいお届け先" %></br>
          <div>
            <%= f.label '郵便番号（ハイフンなし）' %>
            <%= f.text_field :postal_code, placeholder: "0000000" %></br>

            <%= f.label '住所' %>
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町１−１", size: 50 %></br>

            <%= f.label '宛名' %>
            <%= f.text_field :name, placeholder: "令和道子" %>
          </div>
        </div>

      <div class="row text-center">
        <%= f.submit "確認画面に進む", class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>



