<div class="container">
  <h2>注文情報入力</h2>

  <div class="row">
    <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
      <div class="category">
        <h5>支払い方法</h5>
          <%= f.radio_button :payment, Order.payments.key(0) %>
          <%= f.label :payment, Order.payments_i18n[:credit_card] %></br>

          <%= f.radio_button :payment, Order.payments.key(1) %>
          <%= f.label :payment, Order.payments_i18n[:transfer] %>
      </div>

      <div class="category">
        <h5>お届け先</h5>
        <div>
          <%= f.radio_button :order_addresses, @current_addresses %>
          <%= f.label :order_addresses, "ご自身の住所", value: @current_addresses  %></br>

          〒 <%= current_customer.postal_code %> <%= current_customer.address %></br>
            <%= current_customer.last_name %> <%= current_customer.first_name %>
        </div>
      </div>
        <div class="category">
          <%= f.radio_button :order_addresses, :address_id  %>
          <%= f.label :order_addresses, "登録済住所から選択", value: Address.id  %></br>
          <%= f.select Address.id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
        </div>
        <div class="category">
          <%= f.radio_button :order_addresses, @order %>
          <%= f.label :order_addresses, "新しいお届け先", value: @order %></br>
          <div>
            <div>
              <%= f.label '郵便番号（ハイフンなし）' %>
              <%= f.text_field :postal_code, placeholder: "0000000" %>
            </div>
            <div>
              <%= f.label '住所' %>
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町１−１" %>
            </div>
            <div>
              <%= f.label '宛名' %>
              <%= f.text_field :name, placeholder: "令和道子" %>
            </div>
          </div>
        </div>
      <div class="category">
        <%= f.submit "確認画面に進む", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>



