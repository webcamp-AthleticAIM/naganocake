<div class="container mt-5">
  <h3><mark>商品編集</mark></h3>
    <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row">
      <div class="mx-auto mt-5 col-md-5">
        <%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
   <!-- 商品画像 -->
      <div class="from-group">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
      </div>

  <!-- 商品名 -->
      <div class="from-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name %>
      </div>

  <!-- 商品説明 -->
      <div class="from-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction %>
      </div>
  <!-- ジャンル -->
       <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
      </div>

  <!-- 商品の税抜き価格 -->
      <div class="from-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price %>円
      </div>

  <!-- 販売ステータス -->
      <div class="from-group">
        <%= f.label :販売ステータス %>
        <%= f.radio_button :sales_status, true %>
        <%= f.label :sales_status, "販売中", value: :true %>
        <%= f.radio_button :sales_status, false %>
        <%= f.label :sales_status, "販売停止中", value: :false %>
      </div>


        <%#= render 'from_item', item: @item %>


        <div class="row">
        <!-- 新規登録ボタン -->
        <%= f.submit '変更を保存', class: 'btn btn-success mx-auto mt-3' %>
        </div>
      </div>
    </div>
    <% end %>
</div>