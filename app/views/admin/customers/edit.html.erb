<div class='container'>
  <h3>会員情報編集</h3>
    <%= form_with model: @customer, local:true do |f| %>
    <div class='form mx-auto'>
      <div class="form-group">
      <%= f.label '会員ID' %>
      <%#= @customer.id %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>名前</label>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>フリガナ</label>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>郵便番号</label>
      <%= f.text_field :postal_code %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>住所</label>
      <%= f.text_field :address %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>電話番号</label>
      <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>メールアドレス</label>
      <%= f.email_field :email %>
      </div>

      <div class="form-group">
      <label class='admin_customers'>会員ステータス</label>
      <%= f.radio_button :is_deleted, :true %>
      <label class='admin_customers_radio'>有効</label>
      <%= f.radio_button :is_deleted, :false %>
      <label class='admin_customers_radio'>退会</label>
      </div>

      <%= f.submit '変更を保存', class: 'btn btn-sm btn-success'%>
    <% end %>

    </div>
</div>
