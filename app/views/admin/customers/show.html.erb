  <div class='container'>
      <h3>会員詳細</h3>
        <table class="admin_table">
          <tr>
            <td class='admin_customers'>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td class='admin_customers'>氏名</td>
            <td>
              <%= @customer.last_name %>   <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td class='admin_customers'>フリガナ</td>
            <td>
              <%= @customer.last_name_kana %>   <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <td class='admin_customers'>郵便番号</td>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
          <tr>
            <td class='admin_customers'>住所</td>
            <td>
              <%= @customer.address %>
            </td>
          </tr>
          <tr>
            <td class='admin_customers'>電話番号</td>
            <td>
              <%= @customer.telephone_number %>
            </td>
          </tr>
          <tr>
            <td class='admin_customers'>メールアドレス</td>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
          <tr>
            <td class='admin_customers'>会員ステータス</td>
            <td>
              <%= @customer.is_deleted %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success btn-sm mt-3' %>
              <%= link_to '注文履歴一覧', admin_root_path, class: 'btn btn-primary btn-sm ml-3 mt-3' %>
            </td>
          </tr>
        </table>
  </div>
