  <div class='container mt-3'>
    <h3><mark><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</mark></h3>
      <table class="table table-borderless table-sm mt-3">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= @customer.last_name %>   <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= @customer.last_name_kana %>   <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td>
            <%= @customer.postal_code %>
          </td>
        </tr>
        <tr>
          <td>住所</td>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td>
            <%= @customer.telephone_number %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= @customer.email %>
          </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted == true %>
              <strong><span class="text-success">有効</span></strong>
            <% elsif @customer.is_deleted == false %>
              <strong><span class="text-muted">退会</span></strong>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success btn-sm' %>
            <%= link_to '注文履歴一覧', orders_path, class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      </table>


  </div>
