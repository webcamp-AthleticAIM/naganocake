<div class='container'>
  <h3>会員一覧</h3>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_paht(customer) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == true %>
              <strong class='text-success'>有効</strong>
            <% else %>
              <strong class='text-secondary'>退会</strong>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class='text-center'><%= paginate @customers %></div>
</div>

