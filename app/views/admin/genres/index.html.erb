<div class="container">
  <h3>ジャンル一覧・追加</h3>
  
  <div class="row">
    <%= render 'new', genre: @genre %>
  </div>
  
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>